{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "CELO_RPC_URL",
    "HEIRLOCK_RELAYER_PRIVATE_KEY",
    "HEIRLOCK_CRON_SECRET"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "type-check": {
      "dependsOn": [
        "^type-check"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}
